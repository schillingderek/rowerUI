[BlueLabel@Label]:
    text: ctx.text if hasattr(ctx, 'text') else ''
    font_size:'36sp'
    color: (1,1,1,1)
    markup: True
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 0.8 , 1)
        Rectangle:
            pos: self.pos
            size: self.size

