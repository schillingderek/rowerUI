<LoginWindow>:
    name: "login"
    spinner_label: spin
    distance_select_amt: distance_select
    go_distance_button: go_distance_button

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.25)

            AnchorLayout:
                size_hint: (0.25, 0.75)
                anchor_x: 'left'
                padding: (0, 0.5, 0, 2.5)
                BlueLabel:
                    text: "User: "

            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 2, 0, 0, 0
                anchor_x: 'left'
                Spinner:
                    id: spin
                    background_color: (0.4, 0.6, 0.8 , 1)
                    text: "Select from Dropdown"
                    font_size: 36

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.25)

            AnchorLayout:
                size_hint: (0.25, 0.75)
                padding: (0, 0.5, 0, 2.5)
                anchor_x: 'left'
                BlueLabel:
                    text: 'Target\nMeters:'

            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 2, 0, 0, 0
                anchor_x: 'left'
                Spinner:
                    id: distance_select
                    background_color: (0.4, 0.6, 0.8 , 1)
                    text: "Select from Dropdown"
                    font_size: 36
                    values: ('500', '1000', '1500', '2000', '3000', '5000', '10000')
                    on_text:
                        root.update_distance_select(spin.text, distance_select.text)

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.25)
            AnchorLayout:
                size_hint: (0.8, 0.8)
                Button:
                    id: go_distance_button
                    text: "Go the Distance"
                    font_size: 36
                    size_hint: (1, 0.8)
                    disabled: True
                    on_release:
                        root.update_distance_select(spin.text, distance_select.text)
                        app.root.current = "mainpage"

            AnchorLayout:
                size_hint: (0.8, 0.8)
                Button:
                    text: "Just Row"
                    font_size: 36
                    size_hint: (1, 0.8)
                    pos_hint: {'center': (.5, .5)}
                    on_release:
                        app.root.current = "mainpage"
                        distance_select.text = "Select from Dropdown"
                        spin.text = "Select from Dropdown"
                        root.update_distance_select(spin.text, "0")


        AnchorLayout:
            size_hint: (1.0, 0.25)
            Button:
                text: "New User"
                font_size: 36
                size_hint: (1.0, 0.8)
                pos_hint: {'center': (.5, .5)}
                on_release:
#                    passw.text = ""
#                    wrongPassword.text = ""
                    app.root.current = "newuser"

<MainPage>:
    name: "mainpage"
    total_time_label: total_time
    insta_time_per_500m_label: insta_time_per_500m
    total_distance_bar: total_distance_bar
    insta_spm_label: spm
    avg_time_per_500m_label: avg_time_per_500m
    progress_bar_label: progress_bar_label
    main_screen_carousel_index: main_screen_carousel
    total_distance_m_label: total_distance_m
    best_run_bar: best_run_bar
    best_run_label: best_run_label

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 0, 0, 0, 1
                BlueLabel:
                    id: insta_time_per_500m
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 0, 1, 1
                BlueLabelSmallText:
                    text: "/500m"

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 1, 0, 0, 1
                GreyLabel:
                    id: spm
                    text: "0"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 0, 0, 1
                GreyLabelSmallText:
                    text: "spm"

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 0, 1, 0, 0
                BlueLabel:
                    id: avg_time_per_500m
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 1, 1, 0
                BlueLabelSmallText:
                    text: "/500m avg"

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 1, 1, 0, 0
                GreyLabel:
                    id: total_time
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 1, 0, 0
                GreyLabelSmallText:
                    text: "Total Time"

        Carousel:
            index: 0
            id: main_screen_carousel
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    AnchorLayout:
                        size_hint: (0.8, 1)
                        ProgressBar:
                            id: best_run_bar
                            value: 0.00
                            min: 0
                            max: 1
                    AnchorLayout:
                        size_hint: (0.2, 1)
                        BlackLabelSmallText:
                            id: best_run_label
                            text: "Best Run to 500m"

                BoxLayout:
                    orientation: 'horizontal'
                    AnchorLayout:
                        size_hint: (0.8, 1)
                        ProgressBar:
                            id: total_distance_bar
                            value: 0.00
                            min: 0
                            max: 1
                    AnchorLayout:
                        size_hint: (0.2, 1)
                        BlackLabelSmallText:
                            id: progress_bar_label
                            text: "Current Run to 500m\nTotal Distance: 0m"

            BoxLayout:
                orientation: 'horizontal'
                AnchorLayout:
                    size_hint: (0.8, 1)
                    padding: 0, 2, 0, 2
                    BlackLabel:
                        id: total_distance_m
                        text: "0"
                AnchorLayout:
                    size_hint: (0.2, 1)
                    padding: 0, 2, 0, 2
                    anchor_x:'left'
                    BlackLabelSmallText:
                        text: "Total Meters"

        BoxLayout:
            orientation:"horizontal"
            Button:
                text: "Reset Run"
                font_size: "36sp"
                on_release:
                    root.reset_run()
                    total_distance_bar.value = 0.00
                    avg_time_per_500m.text = "0:00:00"
                    best_run_bar.value = 0.00

            Button:
                text: "Back to User Select"
                font_size: "36sp"
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"


<NewUser>:
    name: "newuser"
    user_exists_label: userExists

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.25, 0.75)
                anchor_x: 'left'
                BlueLabel:
                    text: "Name: "

            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 10, 0, 0, 0
                anchor_x: 'left'
                TextInput:
                    padding: 5, 52, 0, 0
                    font_size: 36
                    id: name
                    multiline: False

        AnchorLayout:
            Label:
                id: userExists
                text: ""

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Go Back"
                font_size: 36
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"

            Button:
                text: "Submit"
                font_size: 36
                on_release:
                    if root.save_user(name.text, "") == True: app.root.current = "mainpage"
                    else: root.user_exists_error()
