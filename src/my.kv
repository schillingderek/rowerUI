        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.25, 0.75)
                anchor_x: 'left'
                BlueLabel:
                    text: "Name: "


            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 10, 0, 0, 0
                anchor_x: 'left'
                TextInput:
                    padding: 5, 52, 0, 0
                    font_size: 36
