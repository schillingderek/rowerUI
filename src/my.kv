<LoginWindow>:
    name: "login"
    spinner_label: spin
    distance_select_amt: distance_select

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.25)

            AnchorLayout:
                size_hint: (0.25, 0.75)
                anchor_x: 'left'
                padding: (0, 0.5, 0, 2.5)
                BlueLabel:
                    text: "User: "

            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 2, 0, 0, 0
                anchor_x: 'left'
                Spinner:
                    id: spin
                    background_color: (0.4, 0.6, 0.8 , 1)
                    text: "Select from Dropdown"
                    font_size: 36

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.25)

            AnchorLayout:
                size_hint: (0.25, 0.75)
                padding: (0, 0.5, 0, 2.5)
                anchor_x: 'left'
                BlueLabel:
                    text: 'Target\nMeters:'


            AnchorLayout:
                size_hint: (0.75, 0.75)
                padding: 2, 0, 0, 0
                anchor_x: 'left'
                Spinner:
                    id: distance_select
                    background_color: (0.4, 0.6, 0.8 , 1)
                    text: "Select from Dropdown"
                    font_size: 36
                    values: ('500', '1000', '1500', '2000', '3000', '5000', '10000')

