<MainPage>:
    name: "mainpage"
    total_time_label: total_time
    insta_time_per_500m_label: insta_time_per_500m
    total_distance_bar: total_distance_bar
    insta_spm_label: spm
    avg_time_per_500m_label: avg_time_per_500m
    progress_bar_label: progress_bar_label
    main_screen_carousel_index: main_screen_carousel
    total_distance_m_label: total_distance_m

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 0, 0, 0, 1
                BlueLabel:
                    id: insta_time_per_500m
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 0, 1, 1
                BlueLabelSmallText:
                    text: "/500m"

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 1, 0, 0, 1
                GreyLabel:
                    id: spm
                    text: "0"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 0, 0, 1
                GreyLabelSmallText:
                    text: "spm"


        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 0, 1, 0, 0
                BlueLabel:
                    id: avg_time_per_500m
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 1, 1, 0
                BlueLabelSmallText:
                    text: "/500m avg"

            AnchorLayout:
                size_hint: (0.4, 1)
                padding: 1, 1, 0, 0
                GreyLabel:
                    id: total_time
                    text: "0:00:00"
            AnchorLayout:
                size_hint: (0.1, 1)
                anchor_x:'left'
                padding: 0, 1, 0, 0
                GreyLabelSmallText:
                    text: "Total Time"



        Carousel:
            index: 0
            id: main_screen_carousel
            BoxLayout:
                orientation: 'horizontal'
                AnchorLayout:
                    size_hint: (0.8, 1)
                    ProgressBar:
                        id: total_distance_bar
                        value: 0.00
                        min: 0
                        max: 1
                AnchorLayout:
                    size_hint: (0.2, 1)
                    BlackLabelSmallText:
                        id: progress_bar_label
                        text: "Current Run to 500m\nTotal Distance: 0m"

            BoxLayout:
                orientation: 'horizontal'
                AnchorLayout:
                    size_hint: (0.8, 1)
                    padding: 0, 2, 0, 2
                    BlackLabel:
                        id: total_distance_m
                        text: "0"
                AnchorLayout:
                    size_hint: (0.2, 1)
                    padding: 0, 2, 0, 2
                    anchor_x:'left'
                    BlackLabelSmallText:
                        text: "Total Meters"


                
#        BoxLayout:
#            orientation: 'horizontal'
#            ProgressBar:
#                id: best_run_at_distance_bar
#                value: 0.33
#                min: 0
#                max: 1
#
#            Label:
#                text: "Best Run"

        BoxLayout:
            orientation:"horizontal"
            Button:
                text: "Reset Run"
                font_size: "36sp"
                on_release:
                    root.reset_run()
                    total_distance_bar.value = 0.00
                    avg_time_per_500m.text = "0:00:00"


            Button:
                text: "Back to User Select"
                font_size: "36sp"
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"


